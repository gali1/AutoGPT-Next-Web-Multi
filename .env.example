# .env.example

# Deployment Environment:
NODE_ENV=development

# Next Auth config:
# Generate a secret with `openssl rand -base64 32`, or visit https://generate-secret.vercel.app/
NEXTAUTH_SECRET=***
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=file:./db.sqlite
# PostgreSQL for production (Vercel/Neon)
POSTGRES_URL=***
POSTGRES_URL_NON_POOLING=***
POSTGRES_PRISMA_URL=***

# Multi-LLM Provider API Keys
GROQ_API_KEY=***
NEXT_PUBLIC_GROQ_API_KEY=***
OPENROUTER_API_KEY=***
NEXT_PUBLIC_OPENROUTER_API_KEY=***
COHERE_API_KEY=***
NEXT_PUBLIC_COHERE_API_KEY=***

# Default LLM Provider (groq, openrouter, or cohere)
NEXT_PUBLIC_DEFAULT_LLM_PROVIDER=groq

# Web Search Configuration
GOOGLE_SEARCH_API_KEY=***
GOOGLE_SEARCH_ENGINE_ID=***
SERP_API_KEY=***

# Guest Mode:
# The key NEXT_PUBLIC_GUEST_KEY should be in this format: abc,qwe,123, where each comma-separated value can be used
NEXT_PUBLIC_GUEST_KEY=***

# Web search feature control
NEXT_PUBLIC_WEB_SEARCH_ENABLED=true

# Auth providers. Required to enable sign in, in production. Development mode uses local auth.
GOOGLE_CLIENT_ID=***
GOOGLE_CLIENT_SECRET=***
GITHUB_CLIENT_ID=***
GITHUB_CLIENT_SECRET=***
DISCORD_CLIENT_SECRET=***
DISCORD_CLIENT_ID=***

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=***
STRIPE_WEBHOOK_SECRET=***
STRIPE_SUBSCRIPTION_PRICE_ID=***
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=***
NEXT_PUBLIC_STRIPE_DONATION_ENABLED=false

# Feature Flags
NEXT_PUBLIC_FF_AUTH_ENABLED=true
NEXT_PUBLIC_FF_SUB_ENABLED=false
NEXT_PUBLIC_FF_MOCK_MODE_ENABLED=false

# Redis/Upstash for rate limiting (Optional)
UPSTASH_REDIS_REST_URL=***
UPSTASH_REDIS_REST_TOKEN=***
RATE_LIMITER_REQUESTS_PER_MINUTE=100

# Vercel Configuration
NEXT_PUBLIC_VERCEL_ENV=development
NEXT_PUBLIC_VERCEL_URL=http://localhost:3000